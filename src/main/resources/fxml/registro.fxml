<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="550.0" spacing="20.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="benjaddi.ayoub.proyectofinal.RegistroController">
   <children>
      <Label text="Crear Nueva Cuenta">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <VBox maxWidth="300.0" spacing="5.0">
         <children>
            <Label text="Nombre Completo:" />
            <TextField fx:id="txtNombreRegistro" promptText="Ej. Juan Pérez" />
            <Label prefHeight="18.0" prefWidth="66.0" text="Apellidos:" />
            <TextField fx:id="txtapellidos" layoutX="10.0" layoutY="32.0" promptText="Ej. Juan Pérez" />
         </children>
      </VBox>
      
      <VBox maxWidth="300.0" spacing="5.0">
         <children>
            <Label text="Usuario:" />
            <TextField fx:id="txtUsuarioRegistro" promptText="Nombre de usuario" />
         </children>
      </VBox>
      
      <VBox maxWidth="300.0" spacing="5.0">
         <children>
            <Label text="Contraseña:" />
            <PasswordField fx:id="txtPasswordRegistro" promptText="Contraseña segura" />
         </children>
      </VBox>
      
      <VBox maxWidth="300.0" spacing="5.0">
         <children>
            <Label text="Correo Electrónico:" />
            <TextField fx:id="txtEmailRegistro" promptText="ejemplo@correo.com" />
         </children>
      </VBox>
        <CheckBox fx:id="admin" text="¿Es Admin" />
      <Button mnemonicParsing="false" onAction="#registrarEstudiante" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Confirmar Registro">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
