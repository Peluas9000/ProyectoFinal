<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #f4f6f7;" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="benjaddi.ayoub.proyectofinal.InicioSesionController">
   <children>
      <Label text="Biblioteca Escolar" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      
      <VBox maxWidth="250.0" spacing="5.0">
         <children>
            <Label text="Usuario:" />
            <TextField fx:id="txtUsuario" promptText="Introduce tu usuario" />
         </children>
      </VBox>
      
      <VBox maxWidth="250.0" spacing="5.0">
         <children>
            <Label text="Contraseña:" />
            <PasswordField fx:id="txtPassword" promptText="Introduce tu contraseña" />
         </children>
      </VBox>
      
      <Label fx:id="lblError" textFill="#e74c3c">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      
      <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#iniciarSesion" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Iniciar Sesión">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>